{
  "root": true,
  "ignorePatterns": [
    "dist/**/*"
  ],
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "google"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "parserOptions": { "project": ["./tsconfig.json"] }
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "require-jsdoc": 0,
    "max-len": [
      "error", { "code": 140}
    ],
    "object-curly-spacing": ["error", "never"]
  }
}
